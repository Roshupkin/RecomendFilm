            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_description">

            <android.watch_movie.ui.customview.CustomFavoritesButton
                android:id="@+id/button_favorites"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:textOff="@null"
                android:textOn="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Избранное"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_button_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintStart_toEndOf="@+id/layout_button_reaction"
            app:layout_constraintTop_toBottomOf="@+id/text_description">

            <android.watch_movie.ui.customview.CustomShareButton
                android:id="@+id/button_shar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@null"
                android:clickable="true"
                android:focusable="true"
